function _init()
	gamephase = 1
	palt(0, false)//draw black
	palt(2, true)//do not draw white
	init_players()
end
	
function _update()
	if (gamephase == 1)
	 do_gravity()
		move_player1()
	else
		
	end
end
	
function _draw()
	cls()
	map(0,0,0,0,16,16)
	spr(9, player1.x+player1.barrelx, player1.y+player1.barrely)
	draw_players()
	draw_missile()
end

function do_gravity()
	if ((player1.y) < ground) then
		player1.y += 0.5
	end
end
	
function init_players()
	player1.x = 25
	player1.y = 25
	player1.sprite = 3
	player1.angle = 0
	player1.facing = false //facing false means left, otherwise right
	player1.barrelx = 7 //coordinates for end of barrel relative to top left of sprite
	player1.barrely = 2
end

function draw_players()
	if (player1.angle < 10) then
		player1.sprite = 4
	elseif (player1.angle < 20) then
		player1.sprite = 5
	elseif (player1.angle < 30) then
		player1.sprite = 6
	else
		player1.sprite = 7
	end
	
	spr(player1.sprite,player1.x,player1.y, 1, 1, player1.facing) 
	
end

function move_player1()
	//check for horizontal movement
	if (btn(1)) then
		player1.x += 0.5
		player1.facing = false
		player1.barrelx = 7
	end
	if (btn(0)) then
		player1.x -= 0.5
		player1.facing = true
		player1.barrelx = 0
	end
	
	//check for vertical movment
	if (btn(2)) then
		if (player1.angle < 45) then
			player1.angle += dbarrel
		end
	end
	
	if (btn(3)) then
	 if (player1.angle > 0) then
			player1.angle -= dbarrel
		end
	end
	
	if (player1.angle < 10) then
			player1.barrely = 2
	elseif (player1.angle < 20) then
			player1.barrely = 1
	elseif (player1.angle < 30) then
			player1.barrely = 1
	else
			player1.barrely = 0
	end
end


