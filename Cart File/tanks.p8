			move_phase_update()
		end

end
  
function _draw()
  cls()
  map(0,0,0,0,16,16)
  spr(2, player1.x+player1.barrelx, player1.y+player1.barrely)
  spr(2, player2.x+player2.barrelx, player2.y+player2.barrely)
  draw_players()
  draw_missile()
  print("player "..current_player.." turn", 7)
  // debug statements
  print("p1.x: "..player1.x, 7)
